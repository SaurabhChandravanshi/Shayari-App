<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/referral_list_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:fontFamily="@font/sans_bold"
        android:textColor="@android:color/black"
        android:text="You earned â‚¹___ so far"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2">
        <Button
            android:id="@+id/referral_list_payment_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/sans_regular"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Loading..."
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/round_share_btn"/>
        <Button
            android:id="@+id/referral_list_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/sans_regular"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Contact us"
            android:onClick="contactUs"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/round_share_btn"/>
    </LinearLayout>
    <TextView
        android:id="@+id/referral_expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sans_regular"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@color/colorRed"
        android:text="You will see add payment method option after you reach 100% threshold also you can contact us in case you have any issues."
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:fontFamily="@font/sans_bold"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:textStyle="bold"
        android:text="Your referral list"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/referral_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:fontFamily="@font/sans_regular"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>