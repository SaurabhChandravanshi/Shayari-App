<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>
    <!-- Custom application theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAlertTheme" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:fontFamily">@font/sen_bold</item>
    </style>

    <!-- Style For BottomNavigation View -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/sen_bold</item>
        <item name="itemTextAppearanceActive">@style/Active</item>
        <item name="itemTextAppearanceInactive">@style/Inactive</item>
    </style>
    <style name="Inactive">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Active">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
