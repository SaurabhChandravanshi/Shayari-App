<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.i3developer.shayari">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuoteActivity"/>
        <activity
            android:name=".PositiveQCatActivity"
            android:theme="@style/CustomAppTheme" />
        <activity android:name=".ImageViewerActivity" />
        <activity android:name=".ReferralActivity" />
        <activity
            android:name=".ShayariImageActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".IMGCategoryActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".AppLangActivity"
            android:theme="@style/CustomAppTheme" />
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="shayariapp.page.link"
                    android:scheme="https" />

                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PoetListActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".WishesCatActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".HelpActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/CustomAppTheme" />
        <activity android:name=".ShayariActivity" />
        <activity
            android:name=".CategoryActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/CustomAppTheme" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5585717909119280~1908242140" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.i3developer.shayari.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>